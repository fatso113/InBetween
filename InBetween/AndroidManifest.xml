<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.BSU.inbetween"
    android:installLocation="auto"
    android:versionCode="3"
    android:versionName="1.1.1" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="21" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".activities.MainScreenActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.InGameActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_in_game"
            android:theme="@style/FullscreenTheme" >
        </activity>
        <activity
            android:name=".activities.HelpActivity"
            android:label="@string/title_activity_help" >
        </activity>
        <activity
            android:name=".activities.SettingsActivity"
            android:label="@string/title_activity_settings" >
        </activity>
        <activity
            android:name=".activities.PausedScreen"
            android:label="@string/title_activity_paused_screen" >
        </activity>
        <activity
            android:name=".PausedScreen"
            android:label="@string/title_activity_paused_screen" >
        </activity>
        <activity
            android:name="com.BSU.inbetween.activities.PausedActivity"
            android:label="@string/title_activity_paused" >
        </activity>
        <activity android:name=".activities.SettingsActivityNew" />
        <activity android:name=".activities.StatsActivity" />
    </application>

</manifest>